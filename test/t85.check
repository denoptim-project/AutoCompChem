#!/bin/bash


if [ ! -f "t85-mol.spardir/_spartandir" ]
then
  echo NOT Passes ERROR 1
  exit -1
fi

if [ ! -f "t85-mol.spardir/M0001/_spartan" ] ; then
  echo NOT Passes ERROR 2
  exit -1
fi

if ! head -n 1 t85-mol.spardir/M0001/input | grep -q "DYNCON"; then
  echo NOT Passed ERROR 3
  exit -1
fi

if ! head -n 1 t85-mol.spardir/M0001/input | grep -q "DYNCONMETHOD=GRID"; then
  echo NOT Passed ERROR 3a
  exit -1
fi

if ! head -n 1 t85-mol.spardir/M0001/input | grep -q "FFHINT=Ru1~~210"; then
  echo NOT Passed ERROR 3b
  exit -1
fi

if ! head -n 1 t85-mol.spardir/M0001/input | grep -q "FFHINT=C1~~206"; then
  echo NOT Passed ERROR 3b
  exit -1
fi

n=0
n=$(head -n 1 t85-mol.spardir/M0001/input | grep -o "FFHINT=N.~~211" | wc -l)
if [ "$n" -ne 2 ]; then
  echo "NOT Passed ERROR 3c ($n instead of 2)"
  exit -1
fi

if ! grep -q '1 * 6 * 0 * 0 * 1.7 * 0.0 * 2.7 * 3' t85-mol.spardir/M0001/input ; then
  echo NOT Passed ERROR 4
  exit -1
fi

if ! grep -q "5 * 1 * 6 * 0 * 80.0 * 0.0 * 100.0 * 2" t85-mol.spardir/M0001/input ; then
  echo NOT Passed ERROR 5
  exit -1
fi

if ! grep -q "1 * 6 * 28 * 30 * 0.0 * 0.0 * 180.0 * 1" t85-mol.spardir/M0001/input ; then
  echo NOT Passed ERROR 6
  exit -1
fi

n=0
n=$(grep -c " 6 * 28 " t85-mol.spardir/M0001/input)
if [ "$n" -ne 2 ] ; then
  echo NOT Passed ERROR 7
  exit -1
fi

if ! grep -A1 "^FROZEN" t85-mol.spardir/M0001/input | grep -q "^ * 1 * 2 * 3 * 4 * 5 * 6 * 7 * 8 * 18 * 19 * 20 * 21$" ; then
  echo NOT Passed ERROR 8
  exit -1
fi

if ! grep -A2 "^FROZEN" t85-mol.spardir/M0001/input | grep -q "^ * 22 * 27$" ; then
  echo NOT Passed ERROR 9
  exit -1
fi

if grep -q 'Termination status: 0' t85-mol.log ; then
  echo Passed
  exit 0
else
  echo NOT Passed ERROR 99
  exit -1
fi
