  Cl library lanl2dz_ecp
  Ru library lanl2dz_ecp
$CLOSEBLOCK
$DIR_dft $DIR_xc $MT_functional=pbe0
$DIR_dft $DIR_convergence $KV_energy=1e-6
$DIR_dft $DIR_convergence $KV_density=1e-5
