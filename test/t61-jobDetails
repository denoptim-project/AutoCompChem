$DIR_start
$DIR_title $MT_title="Step1: SP with HF"
$DIR_geometry $KV_units=angstrom
$DIR_geometry $DIR_symmetry $MT_pointgroup=c1
$DIR_basis $DATA_basis=$OPENBLOCK
  H library lanl2dz_ecp
  C library lanl2dz_ecp
  N library lanl2dz_ecp
  Cl library lanl2dz_ecp
  Ru library lanl2dz_ecp
$CLOSEBLOCK
$DIR_ecp $DATA_ecp=$OPENBLOCK
  Cl library lanl2dz_ecp
  Ru library lanl2dz_ecp
$CLOSEBLOCK
$DIR_task $MT_theory=scf
$DIR_task $MT_tasktype=energy
----END-OF-TASK----
$DIR_title $MT_title="Step2: SP with DFT"
