$DIR_dft $DIR_convergence $KV_energy=1e-6
$DIR_dft $DIR_convergence $KV_density=1e-5
$DIR_dft $DIR_grid $MT_finess=fine
$DIR_task $MT_theory=dft
$DIR_task $MT_tasktype=energy
----END-OF-TASK----
$DIR_title $MT_title="Step3: geometry optimization with DFT - frozen core"
