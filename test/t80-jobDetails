$DIR_start
$DIR_title $MT_title="Step:1 SP with HF"
$DIR_geometry $KV_units=angstrom
$ACCPAR_$STARTZCOORD:
[#1] [Ru] constant
[$([#6]~[#7])] [Ru] [#1] constant
[$([#6]~[#7])] [Ru] [$([#6](~[Ru])~[#6])] constant
$END
$DIR_geometry $DIR_symmetry $MT_pointgroup=c1
$DIR_basis $MT_name="ao basis"
$DIR_basis $MT_type=spherical
$DIR_ecp $MT_type=spherical
$ACCPAR_$STARTAtomSpecificBasisSet:
Element H Name lanl2dz_ecp
Element C Name lanl2dz_ecp
Element N Name lanl2dz_ecp
Element Cl Link ../data/basisset/gaussian/H_C-F_Si-Cl_Br_I__LANL2DZdp_ECP.gbs
Element Ru Link ../data/basisset/gaussian/Ru__LANL2DZ_ECP.gbs
$END
$DIR_task $MT_theory=scf
$DIR_task $MT_tasktype=energy
----END-OF-TASK----
$DIR_title $MT_title="Step:2 SP with DFT"
$DIR_basis $MT_name="ao basis"
$DIR_basis $MT_type=spherical
$DIR_ecp $MT_type=spherical
$ACCPAR_$STARTAtomSpecificBasisSet:
