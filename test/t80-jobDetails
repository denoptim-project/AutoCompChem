Element C Name lanl2dz_ecp
Element N Name lanl2dz_ecp
SMARTS [$([#1,#6,#17]~[Ru])] link ../data/basisset/gaussian/H_C-F_Si-Cl_Br_I__LANL2DZdp_ECP.gbs
SMARTS [$([#6]~[#6,#1]~[Ru])] link ../data/basisset/gaussian/H_C-F_Si-Cl_Br_I__LANL2DZdp_ECP.gbs
Element Ru Link ../data/basisset/gaussian/Ru__LANL2DZ_ECP.gbs
$END
$DIR_dft $DIR_xc $MT_functional=pbe0
$DIR_dft $DIR_convergence $KV_energy=1e-6
